{
  "name": "MaestroDMX Enhancer Extension",
  "description": "Add add-on features to enable more functionaity than is built into the current version.",
  "version": "1.4.3",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/bg/bg-loader.js"
  },
  "action": {
    "default_popup": "src/page_action/page_action.html",
    "default_icon": "src/img/favicon-maestro.png"
  },
  "default_locale": "en",
  "permissions": ["storage", "tabs", "downloads"],
  "content_scripts": [
    {
      "matches": [
        "*://maestro.local/*",
        "*://192.168.37.1/*",
        "*://10.0.0.200/*"
      ],
      "exclude_matches": [],
      "js": ["src/inject/js/inject.js"],
      "run_at": "document_end"
    }
  ],
  "externally_connectable": {
    "matches": ["*://maestro.local/*", "*://192.168.37.1/*", "*://10.0.0.200/*"]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/inject/js/globals.js",
        "src/inject/js/maestro-main.js",
        "src/inject/js/overlay.js",
        "src/inject/js/effects.js",
        "src/inject/js/v/1.2.0/api.js",
        "src/inject/js/v/1.3.0/api.js",
        "src/inject/css/overlay.css",
        "src/inject/css/settings.css",
        "src/img/settings.svg",
        "src/img/lightning-charge.svg",
        "src/img/lightning-charge-fill.svg",
        "src/img/fire.svg",
        "src/img/cloud-haze.svg",
        "src/img/projector.svg",
        "src/img/lightbulb.svg",
        "src/img/list.svg",
        "src/img/trash.svg",
        "src/img/exclamation-octagon.svg",
        "src/img/exclamation-octagon-fill.svg",
        "src/img/trash.svg",
        "src/img/file-earmark-x.svg",
        "src/img/music-note-list.svg",
        "src/img/x.svg",
        "src/img/gear.svg",
        "src/img/shop-window.svg",
        "src/img/camera-video.svg",
        "src/img/database-fill-check.svg",
        "src/img/gobo.svg",
        "src/img/play.svg",
        "src/img/play-fill.svg",
        "src/img/facebook.svg",
        "src/img/github.svg",
        "src/img/messenger.svg",
        "src/img/question-circle.svg",
        "src/img/stop.svg",
        "src/img/stop-fill.svg",
        "src/img/x-square-fill.svg",
        "src/img/x-square.svg",
        "src/img/brightness-high-fill.svg",
        "src/img/brightness-high.svg",
        "src/img/brightness-low-fill.svg",
        "src/img/brightness-low.svg",
        "src/external/bootstrap.bundle.min.js",
        "src/external/bootstrap-icons.css",
        "src/external/bootstrap.min.css",
        "src/external/font/bootstrap-icons.woff2",
        "src/external/font/bootstrap-icons.woff",
        "src/img/chevron-contract.svg",
        "src/img/chevron-expand.svg",
        "src/img/lightbulb-off-fill.svg",
        "src/img/lightbulb-off.svg",
        "src/img/lightbulb-fill.svg",
        "src/img/palette-fill.svg",
        "src/img/palette.svg",
        "src/img/volume-up.svg",
        "src/img/volume-down.svg",
        "src/img/volume-mute.svg",
        "src/img/arrow-clockwise.svg",
        "src/img/arrow-down-up.svg",
        "src/img/arrow-left-right.svg",
        "src/img/infinity.svg",
        "src/img/zoom-in.svg",
        "src/img/magic.svg",
        "src/img/activity.svg",
        "src/external/jquery.min.js",
        "src/external/bootstrap-table.min.js",
        "src/external/bootstrap-table.min.css",
        "src/external/json-editor.js",
        "src/external/loadash.min.js"
      ],
      "matches": ["*://*/*"]
    }
  ]
}
